  identifier              = "order-service-db"
  engine                  = "postgres"
  instance_class          = "db.t3.micro"
  allocated_storage       = 20
  storage_type            = "gp2"
  publicly_accessible     = true
  db_subnet_group_name    = aws_db_subnet_group.order-service-db.name
  vpc_security_group_ids  = [aws_security_group.order-service-db.id]
