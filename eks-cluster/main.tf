# Create VPC
resource "aws_vpc" "order-service-db" {
  cidr_block = "10.0.0.0/16"
  enable_dns_support   = true
  enable_dns_hostnames = true

  tags = {
    Name = "order-service-db-vpc"
  }
}

# Create Security Group
resource "aws_security_group" "order-service-db" {
  name        = "order-service-db-security-group"
  description = "Order service security group"

  vpc_id = aws_vpc.order-service-db.id

  ingress {
    from_port   = 0
    to_port     = 65535
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 0
    to_port     = 65535
    protocol    = "udp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = -1
    to_port     = -1
    protocol    = "icmp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "order-service-db-security-group"
  }
}

# Create Internet Gateway
resource "aws_internet_gateway" "order-service-db" {
  vpc_id = aws_vpc.order-service-db.id
  tags = {
    "Name" = "order-service-db-igw"
  }
}

# Create Subnets
resource "aws_subnet" "order-service-db_subnet_1" {
  vpc_id            = aws_vpc.order-service-db.id
  cidr_block        = "10.0.1.0/24"
  availability_zone = "us-east-2a"  # Update with your desired availability zone
}

resource "aws_subnet" "order-service-db_subnet_2" {
  vpc_id            = aws_vpc.order-service-db.id
  cidr_block        = "10.0.2.0/24"
  availability_zone = "us-east-2b"  # Update with your desired availability zone
}

# Create RDS Subnet Group
resource "aws_db_subnet_group" "order-service-db" {
  name       = "example-db-subnet-group"
  subnet_ids = [aws_subnet.order-service-db_subnet_1.id, aws_subnet.order-service-db_subnet_2.id]
}

resource "aws_db_parameter_group" "order-service-db" {
  name        = "order-service-db-parameter-group"
  family      = "postgres14"
  description = "Parameter group for PostgreSQL 14"
}

resource "aws_route_table" "public" {
  vpc_id = aws_vpc.order-service-db.id

  route {
    cidr_block = "0.0.0.0/0"
    gateway_id = aws_internet_gateway.order-service-db.id
  }

  tags = {
    Name = "order-service-db-public_route_table"
  }
}

resource "aws_route_table_association" "subnet1_association" {
  subnet_id      = aws_subnet.order-service-db_subnet_1.id
  route_table_id = aws_route_table.public.id
}

resource "aws_route_table_association" "subnet2_association" {
  subnet_id      = aws_subnet.order-service-db_subnet_2.id
  route_table_id = aws_route_table.public.id
}

resource "aws_db_subnet_group" "order-service-db-subnet-group" {
  name       = "order-service-db-subnet-group"
  subnet_ids = [aws_subnet.order-service-db_subnet_1.id, aws_subnet.order-service-db_subnet_2.id]

  tags = {
    Name = "order-service-db-subnet-group"
  }
}

# Create RDS PostgreSQL Instance
